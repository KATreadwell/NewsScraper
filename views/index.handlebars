<div class="jumbotron text-center">
  <div class="overlay"></div>
  <div class="background-image"></div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <h2>NY Times Opinion: Technology</h2>
    <h3>All the Articles fit to be scraped!</h3>
  </div>
</div>

<div class="container-fluid article-container">
  <div class="card">
    <div class="card-header">
      <ul>
        {{#each Articles}}
        <div class="card-header">
          <h3>
            <a class="article-link" targer="_blank" rel="noopener noreferrer" href={{link}}>{{title}}</a>
          </h3>
        </div>
        <div class="card-body">
          {{summary}}
          <div class="card-footer">
            <a class="btn btn-success save" id="saveArticle" data-id="{{_id}}">Save Article</a>
            <button type="button" class="btn btn-primary" id="makeNotes" data-target="#seeNoteModal" data-toggle="modal"
              data-id="{{_id}}">Make Notes</button>
            <div class="modal fade" id="seeNoteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="noteModalLabel">Title</h5>
                    <input class="form-control title"></input>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <h6 class="modal-title" id="noteModalLabel">Subject</h6>
                    <textarea class="form-control noteBody"></textarea>
                    {{#each Note }}
                    {{ body }}
                    {{/each}}
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="saveNote" data-id={{_id}} class="btn btn-primary">Save changes</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </ul>
    </div>
  </div>
