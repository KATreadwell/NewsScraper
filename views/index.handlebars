<div class="jumbotron text-center">
  <div class="overlay"></div>
  <div class="background-image"></div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <h2>NY Times Opinion: Technology</h2>
    <h3>All the Articles fit to be scraped!</h3>
    <h4>Save an Article, Make a Note!</h4>
  </div>
</div>

<div class="container-fluid article-container">
  <div class="card">
    <div class="card-header">
      <ul>
        {{#each Articles}}
        <div class="card-header">
          <h3>
            <a class="article-link" targer="_blank" rel="noopener noreferrer" href={{link}}>{{title}}</a>
          </h3>
        </div>
        <div class="card-body">
          {{summary}}
          <div class="card-footer">
            <a class="btn btn-success save" id="saveArticle" data-id="{{_id}}">Save Article</a>
          </div>
        </div>
        {{/each}}
      </ul>
    </div>
  </div>
